class Solution {
    public int[] decompressRLElist(int[] nums) {
        ArrayList<Integer> res = new ArrayList<>();
        int freq = 0;
        int val = 0;
        for (int i = 0; i < nums.length / 2; i++) {
            freq = nums[2 * i];
            val = nums[2 * i + 1];
            for (int j = 0; j < freq; j++) {
                res.add(val);
            }
        }
        int arr[] = new int[res.size()];
        int idx = 0;
        for (int num : res) {
            arr[idx++]=num;
        }
        return arr;

    }
}
